{
  "name": "clan-leaderboard",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "Git"
  },
  "scripts": {
    "docs:app": "typedoc --out docs/app --esModuleInterop  ./src",
    "docs:test": "typedoc --out docs/test --esModuleInterop --tsconfig tsconfig.test.json ./test ",
    "clean": "rimraf dist && rimraf target && rimraf reports",
    "webdriver-manager:update": "webdriver-manager update",
    "webdriver-manager:start": "webdriver-manager start",
    "webdriver-manager:process": "lsof -ni tcp:4444 | awk 'NR!=1 {print $2}'",
    "webdriver-manager:kill": "kill -9 $(lsof -i:4444 -t)",
    "webdriver-manager": "npm run webdriver-manager:update && npm run webdriver-manager:start & npm run webdriver-manager:process",
    "test:update-serenity": "serenity update --artifact net.serenity-bdd:serenity-cli:jar:all:2.1.9 --repository https://jcenter.bintray.com/ --ignoreSSL",
    "test:cucumber": "protractor protractor.conf.js",
    "test:report": "npm run test:update-serenity && serenity run --artifact='net.serenity-bdd:serenity-cli:jar:all:2.1.9'",
    "test": "npm run clean && npm run test:update-serenity && npm run lint && npm run test:cucumber -- --cucumberOpts.tags \"not @wip\" ",
    "test: smoke-tests": "npm run clean && npm run test:update-serenity && npm run lint && npm run test:cucumber -- --cucumberOpts.tags \"@smoke and not @wip\"",
    "lint": "tslint --project tsconfig.json --config tslint.json --format stylish",
    "compile": "tsc --esModuleInterop true",
    "build": "webpack --config webpack.$NODE_ENV.js",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:ci": "npm run lint && npm run compile && npm run build",
    "start": "node dist/server",
    "start:env": "node --require dotenv/config dist/server"
  },
  "devDependencies": {
    "@serenity-js/assertions": "2.0.1-alpha.76",
    "@serenity-js/core": "2.0.1-alpha.76",
    "@serenity-js/cucumber": "2.0.1-alpha.76",
    "@serenity-js/local-server": "2.0.1-alpha.76",
    "@serenity-js/protractor": "2.0.1-alpha.76",
    "@serenity-js/rest": "2.0.1-alpha.76",
    "@types/cucumber": "^4.0.5",
    "@types/webpack-env": "^1.14.0",
    "axios": "^0.19.0",
    "chai": "^4.2.0",
    "chromedriver": "^76.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "cucumber": "^5.1.0",
    "npm-failsafe": "0.4.1",
    "protractor": "^5.4.2",
    "serenity-cli": "^0.11.3",
    "tslint": "^5.18.0",
    "ts-loader": "^6.0.4",
    "ts-node": "8.0.2",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "webdriver-manager": "^12.1.6",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "moment": "^2.24.0",
    "dotenv": "^8.0.0"
  },
  "dependencies": {
    "graphql": "^14.4.2",
    "express": "^4.17.3",
    "express-graphql": "^0.9.0",
    "body-parser": "^1.19.0",
    "angular": "^1.7.8",
    "mongoose": "^5.6.7",
    "bungie-api-ts": "^2.1.0",
    "apollo-server": "^2.8.1",
    "apollo-client": "^2.6.3"
  }
}
